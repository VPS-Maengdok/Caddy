:80 {
    root * /srv/app/public

    encode zstd gzip

    header {
        -Server
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy no-referrer-when-downgrade
    }

    handle_path /uploads/* {
        root * /srv/app/var/uploads
        file_server
    }

    php_fastcgi maengdok_portfolio_php:9000
    file_server
}
